<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>com.leon.xinfur.filter.AuthFilter</filter-class>
        <init-param>
            <param-name>excludedUrls</param-name>
            <param-value>/kaptchaServlet,/views/member/login.jsp,/views/manager/manage_login.jsp</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>TransFilter</filter-name>
        <filter-class>com.leon.xinfur.filter.TransFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>TransFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/views/manager/*</url-pattern>
        <url-pattern>/views/member/*</url-pattern>
        <url-pattern>/views/cart/*</url-pattern>
        <url-pattern>/views/order/*</url-pattern>
        <url-pattern>/cartServlet</url-pattern>
        <url-pattern>/orderServlet</url-pattern>
        <url-pattern>/manage/furnServlet</url-pattern>
    </filter-mapping>
    
    <error-page>
        <error-code>404</error-code>
        <location>/views/error/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/views/error/500.jsp</location>
    </error-page>

    <servlet>
        <servlet-name>MemberServlet</servlet-name>
        <servlet-class>com.leon.xinfur.web.MemberServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FurnServlet</servlet-name>
        <servlet-class>com.leon.xinfur.web.FurnServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerFurnServlet</servlet-name>
        <servlet-class>com.leon.xinfur.web.CustomerFurnServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Kaptcha</servlet-name>
        <servlet-class>com.google.code.kaptcha.servlet.KaptchaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>com.leon.xinfur.web.CartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderServlet</servlet-name>
        <servlet-class>com.leon.xinfur.web.OrderServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MemberServlet</servlet-name>
        <url-pattern>/memberServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FurnServlet</servlet-name>
        <url-pattern>/manage/furnServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerFurnServlet</servlet-name>
        <url-pattern>/customerFurnServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Kaptcha</servlet-name>
        <url-pattern>/kaptchaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/cartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderServlet</servlet-name>
        <url-pattern>/orderServlet</url-pattern>
    </servlet-mapping>
</web-app>